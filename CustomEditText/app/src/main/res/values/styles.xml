<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#01685E</item>
        <item name="colorAccent">#E91E63</item>
    </style>


    <style name="QTextInputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">@style/QMaterialThemeOverlay</item>
        <item name="android:background">#00000000</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@null</item>
        <item name="boxCollapsedPaddingTop">12dp</item>
        <item name="boxStrokeColor">@color/stroke_transparent_color</item>
    </style>

    <style name="QMaterialThemeOverlay">
        <item name="editTextStyle">@style/QEditTextPadding</item>
    </style>

    <style name="QEditTextPadding" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:paddingTop">26dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


</resources>
